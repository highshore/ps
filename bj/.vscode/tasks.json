{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build active file",
			"type": "shell",
			"command": "g++",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": ["$gcc"]
		},
		{
			"label": "run python file",
			"type": "shell",
			"command": "python3 -u",
			"args": ["${file}"],
			"group": {
				"kind": "none",
				"isDefault": false
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "shared"
			}
		}
	]
}
